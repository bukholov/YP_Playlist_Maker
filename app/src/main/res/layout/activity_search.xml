<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorSecondary"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonBackFromSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/title_label_margin"
            android:layout_marginStart="@dimen/title_label_margin"
            android:layout_marginBottom="@dimen/title_label_margin_bottom"
            android:background="@null"
            android:backgroundTint="?attr/colorSecondary"
            android:padding="@dimen/title_label_padding"
            android:text="@string/search"
            android:textAlignment="textStart"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="@dimen/settings_title_font_size"
            app:icon="@drawable/arrow_back"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/settings_title_icon_padding"
            app:iconTint="?attr/colorOnPrimary" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/editTextSearch"
                android:layout_width="match_parent"
                android:layout_height="@dimen/search_activity_edit_text_height"
                android:layout_marginStart="@dimen/search_activity_font_size"
                android:layout_marginTop="@dimen/search_activity_font_size"
                android:layout_marginEnd="@dimen/search_activity_font_size"
                android:layout_marginBottom="@dimen/search_activity_font_size"
                android:background="@drawable/et_style"
                android:backgroundTint="?attr/colorTertiary"
                android:drawableStart="@drawable/search"
                android:drawablePadding="@dimen/search_activity_drawable_padding_edit_text"
                android:drawableTint="?attr/colorOnTertiary"
                android:fontFamily="@font/ys_display_regular"
                android:hint="@string/search"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textColorHint="?attr/colorOnTertiary"
                android:paddingStart="@dimen/search_activity_padding_edit_text"
                android:textSize="@dimen/search_activity_font_size" />

            <ImageView
                android:id="@+id/imageViewClearText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/editTextSearch"
                android:layout_alignBottom="@+id/editTextSearch"
                android:layout_alignRight="@+id/editTextSearch"
                android:backgroundTint="?attr/colorOnTertiary"
                android:padding="@dimen/search_activity_padding_image_clear_text"
                android:visibility="invisible"
                android:src="@drawable/cross_clear_text" />
        </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>